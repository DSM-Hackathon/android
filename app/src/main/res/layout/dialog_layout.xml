<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="380dp"
    style="@style/Widget.AppCompat.Button.Borderless">


    <ImageButton
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="재해 신고"
        android:layout_marginTop="40dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/dedail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="상세내용"
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/dialog_detail_et"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radious"
        android:hint="필요한 상세 내용을 적어 주세요"
        android:paddingLeft="20dp"
        android:paddingBottom="100dp"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/dedail"
        app:layout_constraintTop_toBottomOf="@id/dedail" />

    <ImageButton
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:src="@drawable/decaration"
        app:layout_constraintEnd_toEndOf="@+id/dialog_detail_et"
        app:layout_constraintStart_toStartOf="@+id/dialog_detail_et"
        app:layout_constraintTop_toBottomOf="@id/dialog_detail_et" />

</androidx.constraintlayout.widget.ConstraintLayout>